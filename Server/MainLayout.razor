@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudButton Variant="Variant.Text" Color="Color.Inherit">Sign In</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" >
        <MudNavMenu Class="mud-width-full">
        <MudText Align="Align.Center" Typo="Typo.h5" Class="px-4, py-4">Trading App</MudText>
        <MudDivider />
        <MudNavLink IconColor="Color.Inherit" Href="/dashboard" Icon="@Icons.Material.Outlined.Dashboard">Dashboard</MudNavLink>
        <MudNavLink Href="/billing" Icon="@Icons.Material.Filled.Receipt">Billing</MudNavLink>
    </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}